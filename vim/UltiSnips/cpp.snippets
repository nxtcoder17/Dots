vector<string> split(string& s, string delim)
{
    vector<string> arr;
    size_t f = 0;
    size_t x;
    while ( (x = s.find(delim, f)) != string::npos) {
        arr.push_back(s.substr(f, x-f));
        f = x + delim.length();
    }
    arr.push_back(s.substr(f, s.length()));
    return arr;
}
