vector<string> split(string& s, char delim)
{
    vector<string> arr;
    // size_t f = s.find(delim);
    size_t f = 0;
    size_t x;
    while ( (x = s.find(delim, f)) != string::npos) {
        arr.push_back(s.substr(f, x-f));
        f = x+1;
    }
    arr.push_back(s.substr(f, s.length()));
    return arr;
}
