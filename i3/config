bindsym $mod+Shift+BackSpace move scratchpad
bindsym $mod+backslash scratchpad show

for_window [title="NxtTerm"] floating enable
for_window [title="NxtTerm"] resize set 1000 500
for_window [title="NxtTerm"] move scratchpad
for_window [title="NxtTerm"] border pixel 5

exec --no-startup-id xfce4-terminal --hide-menubar -T NxtTerm 

bindsym control + shift + space	[title="NxtTerm"] scratchpad show; [title="NxtTerm"] move position center
bindsym $alt + shift + space exec --no-startup-id xfce4-terminal --hide-menubar -T NxtTerm 

#========= ==> [End: ScratchPad ] <== =========== }}}

